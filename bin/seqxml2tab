############################ Import all modules ##############################

import os
import argparse
import sys
from Bio import SeqIO

################################# main code ##################################

def main(input, output):
    if input == '-':
        input = sys.stdin
    if output == '-':
        output = sys.stdout

    SeqIO.convert(input, 'seqxml', output, 'tab')



############################ Argument Handling ###############################

if __name__== '__main__':
    arg_parser = argparse.ArgumentParser(description='')
    arg_parser.add_argument("-i", "--input", default='-', help="Input sequence file. Default is '-' (stdin)")
    arg_parser.add_argument("-o","--output", default='-', help="Output file for sequences to be written to. Default is '-' (stdout)")
    args = arg_parser.parse_args()

    input = args.input
    output = args.output
    main(input, output)
